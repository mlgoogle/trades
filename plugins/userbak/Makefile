$(PLUGIN) : user_init.o user_logic.o user_manager.o user_interface.o user_proto.o user_mysql.o\
	util.o logic_unit.o packet_processing.o data_engine.o mysql_pool.o \
	data_mysql_engine.o data_redis_engine.o user_info.o data_share_mgr.o wx_order.o unionpay_order.o\
	$(CUSTOM_THIRD_PATH)/dmg_fp/lib/dmg_fp.a $(LIB_DIR)/mylib/base/lib/mybase.a $(LIB_DIR)/mylib/third_party/lib/libhiredis.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(LINK_PATHS) -lpthread -lexpat -lrt -ldl -lmysqlclient -lcurl \
	$^ -o $@

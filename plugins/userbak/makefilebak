OUT_PUT = ${SO_DIR}/user/user.so 

SRC_DIR = ../..
LIB_DIR = ./../../../library
THIRD_PATH = $(LIB_DIR)/mylib/third_party
SRC_PLUGINS = ${SRC_DIR}/plugins
SO_DIR = ${SRC_DIR}/bin/plugins
SRC_PUB = ${SRC_DIR}/pub
SRC_PUB_NET = ${SRC_PUB}/net
SRC_PUB_UTIL = ${SRC_PUB}/util
SRC_PUB_STORAGE = ${SRC_PUB}/storage
SRC_PUB_SHARE = ${SRC_PUB}/share
SRC_PUB_COMM = ${SRC_PUB}/comm
SRC_PUB_PAY = ${SRC_PUB}/pay

LINK_DYNAMIC = -Wl,-Bdynamic -lpthread
LINK_STATIC = -Wl,-Bstatic -L

CPPFLAGS += -isystem -shared -fPIC -D_DB_POOL_ -D_DEBUG -DUSR_LOG_MSG\
	-D_DIC_POOL_ -D_REENTRANT -D_GNU_SOURCE -DUSR_LOG_ERROR -DUSR_LOG_MSG\
	-DNET_WORK -DHEAD_SHORT -Wall

CXXFLAGS += -g -O0 -Wextra -w -shared -fPIC 

INCLUDE_PATHS = -I${LIB_DIR} \
		-I${SRC_PLUGINS} \
		-I${SRC_DIR} \
		-I$(SRC_PUB) \
		-I${LIB_DIR}/mylib/public \
		-I${LIB_DIR}/mylib/base \
		-I${LIB_DIR}/BasicCore \
		-I$(THIRD_PATH) \
		-I${SRC_PUB} \
		

all : ${OUT_PUT} del-temp-files

del-temp-files:
	rm -rf *.o
	
clean :
	rm -f ${OUT_PUT}  del-temp-files
	
user_init.o : ./user_init.cc  ./user_init.h
	${CXX} ${CXXFLAGS} ${CPPFLAGS} -c ./user_init.cc ${INCLUDE_PATHS}

user_logic.o : ./user_logic.cc  ./user_logic.h
	${CXX} ${CXXFLAGS} ${CPPFLAGS} -c ./user_logic.cc ${INCLUDE_PATHS}

user_manager.o : ./user_manager.cc  ./user_manager.h
	${CXX} ${CXXFLAGS} ${CPPFLAGS} -c ./user_manager.cc ${INCLUDE_PATHS}
	
user_interface.o : ./user_interface.cc  ./user_interface.h
	${CXX} ${CXXFLAGS} ${CPPFLAGS} -c ./user_interface.cc ${INCLUDE_PATHS}
	
user_proto.o : ./user_proto.cc  ./user_proto.h
	${CXX} ${CXXFLAGS} ${CPPFLAGS} -c ./user_proto.cc ${INCLUDE_PATHS}

user_mysql.o : ./user_mysql.cc  ./user_mysql.h
	${CXX} ${CXXFLAGS} ${CPPFLAGS} -c ./user_mysql.cc ${INCLUDE_PATHS}

util.o : ${SRC_PUB}/util/util.cc  ${SRC_PUB}/util/util.h
	${CXX} ${CXXFLAGS} ${CPPFLAGS} -c ${SRC_PUB}/util/util.cc ${INCLUDE_PATHS}

logic_unit.o :  $(SRC_PUB)/logic/logic_unit.cc $(SRC_PUB)/logic/logic_unit.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(SRC_PUB)/logic/logic_unit.cc $(INCLUDE_PATHS)

packet_processing.o :  $(SRC_PUB)/net/packet_processing.cc $(SRC_PUB)/net/packet_processing.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(SRC_PUB)/net/packet_processing.cc $(INCLUDE_PATHS)
	
data_engine.o : $(SRC_PUB)/storage/data_engine.cc  $(SRC_PUB)/storage/data_engine.h
	${CXX} ${CPPFLAGS} ${CXXFLAGS} -c ${SRC_PUB}/storage/data_engine.cc ${INCLUDE_PATHS}

mysql_pool.o : $(SRC_PUB)/storage/mysql_pool.cc  $(SRC_PUB)/storage/mysql_pool.h
	${CXX} ${CPPFLAGS} ${CXXFLAGS} -c $(SRC_PUB)/storage/mysql_pool.cc ${INCLUDE_PATHS}

data_mysql_engine.o : $(SRC_PUB)/storage/data_mysql_engine.cc  $(SRC_PUB)/storage/data_mysql_engine.h
	${CXX} ${CPPFLAGS} ${CXXFLAGS} -c $(SRC_PUB)/storage/data_mysql_engine.cc ${INCLUDE_PATHS}

data_redis_engine.o :  $(SRC_PUB)/storage/data_redis_engine.cc $(SRC_PUB)/storage/data_redis_engine.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(SRC_PUB)/storage/data_redis_engine.cc $(INCLUDE_PATHS)

user_info.o : $(SRC_PUB)/comm/user_info.cc  $(SRC_PUB)/comm/user_info.h 
	${CXX} ${CPPFLAGS} ${CXXFLAGS} -c $(SRC_PUB)/comm/user_info.cc ${INCLUDE_PATHS}
	
data_share_mgr.o : $(SRC_PUB)/share/data_share_mgr.cc  $(SRC_PUB)/share/data_share_mgr.h 
	${CXX} ${CPPFLAGS} ${CXXFLAGS} -c $(SRC_PUB)/share/data_share_mgr.cc ${INCLUDE_PATHS}

share_guide.o : ${SRC_PUB_COMM}/share_guide.cc  ${SRC_PUB_COMM}/share_guide.h 
	${CXX} ${CPPFLAGS} ${CXXFLAGS} -c ${SRC_PUB_COMM}/share_guide.cc ${INCLUDE_PATHS}

wx_order.o : $(SRC_PUB)/pay/wxpay/wx_order.cc  $(SRC_PUB)/pay/wxpay/wx_order.h 
	${CXX} ${CPPFLAGS} ${CXXFLAGS} -c $(SRC_PUB)/pay/wxpay/wx_order.cc ${INCLUDE_PATHS}

unionpay_order.o : $(SRC_PUB)/pay/unionpay/unionpay_order.cc  $(SRC_PUB)/pay/unionpay/unionpay_order.h 
	${CXX} ${CPPFLAGS} ${CXXFLAGS} -c $(SRC_PUB)/pay/unionpay/unionpay_order.cc ${INCLUDE_PATHS}

${OUT_PUT} : user_init.o user_logic.o user_manager.o \
		user_interface.o user_proto.o user_mysql.o util.o logic_unit.o packet_processing.o data_engine.o mysql_pool.o \
		data_mysql_engine.o data_redis_engine.o user_info.o data_share_mgr.o wx_order.o unionpay_order.o
	${CXX} ${CXXFLAGS} $^ -o ${OUT_PUT} ${LINK_PATH} -lpthread -lmysqlclient \
		-lcurl ${LIB_DIR}/mylib/base/lib/mybase.a \
		${LIB_DIR}/mylib/third_party/dmg_fp/lib/dmg_fp.a
